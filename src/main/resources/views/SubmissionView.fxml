            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <Label id="marksReceivedLabel" fx:id="marksReceivedLabel" text="Total marks: " />
            </HBox>
         </children>
      </VBox>
