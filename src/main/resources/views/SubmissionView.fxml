                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <HBox alignment="TOP_CENTER">
                        <children>
                           <Label text="Grading Rubric" />
                        </children>
                     </HBox>
                  </VBox>
               </content>
            </ScrollPane>
         </VBox>
         <HBox alignment="CENTER" spacing="30.0">
            <children>
               <Button mnemonicParsing="false" onAction="#setGradingRubric" text="Set Rubric" />
